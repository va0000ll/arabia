<div id="comment-<%= comment.id %>">
  <div class="card-footer">
    <%= gravatar_tag comment.user.email, size: 25, html: {class: 'img-fluid'} %>
    <span><%= comment.user.username %></span>
    <span>رد على تغريدة</span>
    <%= content_tag :time, '', class: 'timeago', datetime: comment.created_at.localtime %>
    <% if user_signed_in? && current_user.id == comment.user.id %>
    <%= link_to('حذف', comment_path(comment), method: :delete, remote: true, class: 'btn btn-sm btn-danger') %>
    <% end %>
  </div>
  <div class="card-body">
    <%= raw(comment.comment) %>
  </div>
</div>