<!DOCTYPE html>
<html>
  <head>
    <title>Arabi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    
    <div class="container">
      <div class="py-3">
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
    </div>

    <script>
      $(document).ready(function(){
        $('.timeago').timeago()
      });
    </script>
  </body>
</html>
